@model KluczToSukcesDoKariery.Models.Notatki

@{
    ViewData["Title"] = "Szczegóły Notatki";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2D2D2D;
        color: white;
        text-align: center;
    }

    h1 {
        color: #F3D62D;
        margin-bottom: 20px;
    }

    .details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 20px;
        padding-bottom: 50px;
    }

    .details-box {
        background-color: #444;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        max-width: 600px;
        text-align: left;
    }

    dl.row {
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #F3D62D;
    }

    dd {
        color: #F3D62D;
        margin-bottom: 10px;
    }

    .btn-link {
        color: #F3D62D;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        margin-right: 10px;
        transition: color 0.3s;
    }

        .btn-link:hover {
            text-decoration: underline;
            color: #e6c329;
        }
</style>

<div class="details-container">
    <div class="details-box">
        <h1>Szczegóły Notatki</h1>

        <hr />

        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Tytul)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tytul)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Tresc)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tresc)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DataDodania)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DataDodania)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        </dl>

        <div style="margin-top: 20px; text-align: center;">
            <a asp-action="Edytuj" asp-route-id="@Model?.Id" class="btn-link">Edytuj</a> |
            <a asp-action="Index" class="btn-link">Powrót do notatek</a>
        </div>
    </div>
</div>