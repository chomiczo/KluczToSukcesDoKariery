@model IEnumerable<KluczToSukcesDoKariery.Models.Notatki>

@{
    ViewData["Title"] = "Notatki";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2D2D2D;
        color: white;
        text-align: center;
    }

    h1, h2 {
        margin-bottom: 20px;
    }

    .main-button {
        display: inline-block;
        background-color: #F3D62D;
        color: #2D2D2D;
        padding: 15px 30px;
        margin: 20px 0;
        border: none;
        border-radius: 5px;
        font-size: 20px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.2s;
    }

        .main-button:hover {
            background-color: #e6c329;
            transform: scale(1.05);
        }

        .main-button:active {
            transform: scale(0.95);
        }

    .table-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        padding-bottom: 50px;
    }

    .table {
        width: 80%; /* Width of the table */
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #555;
            padding: 10px;
            color: white;
            text-align: center;
        }

        .table th {
            background-color: #444;
        }

        .table tr:nth-child(even) {
            background-color: #333;
        }

    .actions a {
        display: block; /* Each link in a new line */
        margin: 5px 0; /* Space between links */
        color: #F3D62D;
        text-decoration: none;
    }

        .actions a:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Twoje Notatki</h1>

    <p>
        <a class="main-button" asp-action="Create">Utwórz nową notatkę</a>
    </p>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Tytul)</th>
                    <th>@Html.DisplayNameFor(model => model.Tresc)</th>
                    <th>@Html.DisplayNameFor(model => model.DataDodania)</th>
                    <th>@Html.DisplayNameFor(model => model.UserId)</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Tytul)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tresc)</td>
                        <td>@item.DataDodania?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                        <td class="actions">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>