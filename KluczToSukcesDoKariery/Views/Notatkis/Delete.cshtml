@model KluczToSukcesDoKariery.Models.Notatki

@{
    ViewData["Title"] = "Usuń Notatkę";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2D2D2D;
        color: white;
        text-align: center;
    }

    h1, h3 {
        color: #F3D62D;
        margin-bottom: 20px;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 20px;
        padding-bottom: 50px;
    }

    .form-box {
        background-color: #444;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        max-width: 600px;
    }

    dl.row {
        text-align: left;
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #F3D62D;
    }

    dd {
        color: #F3D62D;
        margin-bottom: 10px;
    }

    .btn-danger {
        background-color: #e63946;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
        margin-top: 15px;
        width: 100%;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
            transform: scale(1.05);
        }

        .btn-danger:active {
            transform: scale(0.95);
        }

    .back-link {
        color: #F3D62D;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <div class="form-box">
        <h1>Usuń Notatkę</h1>
        <h3>Czy na pewno chcesz usunąć tę notatkę?</h3>

        <hr />

        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Tytul)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tytul)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Tresc)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tresc)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DataDodania)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DataDodania)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn-danger">Usuń</button>
        </form>

        <div style="margin-top: 20px;">
            <a asp-action="Index" class="back-link">Powrót do notatek</a>
        </div>
    </div>
</div>
