@model KluczToSukcesDoKariery.Models.Notatki

@{
    ViewData["Title"] = "Edytuj Notatkę";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2D2D2D;
        color: white;
        text-align: center;
    }

    h1 {
        color: #F3D62D;
        margin-bottom: 20px;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 20px;
        padding-bottom: 50px;
    }

    .form-box {
        background-color: #444;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        max-width: 600px;
    }

    .form-group label {
        color: #F3D62D;
        font-weight: bold;
    }

    .form-control {
        background-color: #333;
        border: 1px solid #555;
        color: #F3D62D;
        padding: 10px;
        border-radius: 4px;
    }

        .form-control[readonly] {
            background-color: #333;
            color: #888;
        }

        .form-control.textarea-multiline {
            height: 100px; /* Wysokość pola tekstowego dla kilku linii */
            resize: vertical;
        }

    .btn-submit {
        background-color: #F3D62D;
        color: #2D2D2D;
        padding: 10px 20px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
        width: 100%;
        margin-top: 15px;
    }

        .btn-submit:hover {
            background-color: #e6c329;
            transform: scale(1.05);
        }

        .btn-submit:active {
            transform: scale(0.95);
        }

    .back-link {
        color: #F3D62D;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <div class="form-box">
        <h1>Edytuj Notatkę</h1>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Tytul" class="control-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tresc" class="control-label"></label>
                <textarea asp-for="Tresc" class="form-control textarea-multiline"></textarea>
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataDodania" class="control-label"></label>
                <input asp-for="DataDodania" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" readonly />
                <span asp-validation-for="DataDodania" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Zapisz</button>
        </form>

        <div style="margin-top: 20px;">
            <a asp-action="Index" class="back-link">Powrót do notatek</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
