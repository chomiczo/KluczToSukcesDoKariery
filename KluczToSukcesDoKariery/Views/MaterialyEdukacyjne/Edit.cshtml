@model KluczToSukcesDoKariery.Models.MaterialEdu

@{
    ViewData["Title"] = "Edytuj materiał edukacyjny";
}

<div class="form-container">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="Tytul">Tytuł</label>
            <input type="text" id="Tytul" name="Tytul" class="form-control" value="@Model.Tytul" required />
        </div>
        <div class="form-group">
            <label for="Opis">Opis</label>
            <textarea id="Opis" name="Opis" class="form-control" required>@Model.Opis</textarea>
        </div>
        <div class="form-group">
            <label for="Link">Link</label>
            <input type="url" id="Link" name="Link" class="form-control" value="@Model.Link" required />
        </div>

        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
    </form>
</div>